<div class="row" id="pad">

  <div class="col-sm-4">
    <div class="list_div">
      <h1> <%= @event.title %> </h1>
      <h3> <%= @event.location %> </h3>
      <h3> <%= @event.host %> </h3>
      <h3> <%= @event.when %> </h3>
      <h3> <%= @event.description %> </h3>
      <h3> Event Category: <%= @event.category %> </h3>
    </div>

    <form action="/event/<%=@event.id%>/delete" method="post">
      <input name="_method" type="hidden" value="delete">
      <button class="btn btn-primary" type="submit">Remove <%= @event.title %></button>
    </form>
    <br>
    <br>
    <a href="/"><button class="btn btn-primary" name="button">Return Home</button></a>
  </div>
  <div class="col-sm-4">
    <div class="col_sm-4 list_div" id="event_user_list">
      <h3>Users going to the event</h3>
      <ul>
        <% if @event.users.any? %>
          <% @event.users.each do |user| %>
            <h5><a href="/user/<%= user.id %>"><li><%= user.name %></li></a></h5>
          <% end %>
        <% else %>
          <p>There are currently no users planning to attend.</p>
        <% end %>
      </ul>
    </div>
  </div>
  <div class="col-sm-4">
    <div class="card">
      <form action="/event/<%=@event.id%>/edit" method="post">
        <% if @users.any? %>
        <h5><label for="new_user">RSVP with your name!</label></h5>
          <select id='new_user' name='new_user' type='text'>
            <% @users.each() do |user| %>
              <option value="<%= user.id()%>"> <%= user.name %> </option>
            <% end %>
          </select>
        <button type="submit" class="btn btn-primary">Add User</button>
      </form>
      <br>
      <br>
        <% end %>
      <h5>Create a new account</h5>
      <a href="/add_user"><button class="btn btn-primary" name="button">Create New Account</button></a>
        </div>
      </form>
    </div>
  </div>
